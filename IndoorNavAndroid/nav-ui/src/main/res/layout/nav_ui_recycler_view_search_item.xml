<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/nav_ui_kit_default_medium_vertical_padding">

    <ImageView
        android:id="@+id/navUiRecyclerViewSearchImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/nav_ui_kit_ic_history_24dp"
        android:backgroundTint="@color/nav_ui_kit_grayscale_icons" />

    <TextView
        android:id="@+id/navUiRecyclerViewSearchTextView"
        style="@style/IndoorNavigation.TextView.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/nav_ui_kit_default_medium_horizontal_padding" />
</LinearLayout>