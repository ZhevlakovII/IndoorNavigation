<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/navCreatorFragmentContainer"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/navCreatorBottomNavigation"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navCreatorBottomNavigation"
        style="@style/IndoorNavigation.BottomView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_uikit_default_bottom_menu_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/nav_creator_menu_bottom_view" />

</androidx.constraintlayout.widget.ConstraintLayout>