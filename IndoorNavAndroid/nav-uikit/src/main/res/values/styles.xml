<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Bottom Menu-->
    <style name="IndoorNavigation.BottomView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/nav_ui_kit_background_bottom_menu</item>
        <item name="itemTextColor">@color/nav_ui_kit_color_bottom_view</item>
        <item name="itemIconTint">@color/nav_ui_kit_color_bottom_view</item>
        <item name="itemPadding">@dimen/nav_ui_kit_default_large_padding</item>
    </style>

    <!--Buttons-->
    <style name="IndoorNavigation.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/nav_ui_kit_background</item>
        <item name="cornerRadius">@dimen/nav_ui_kit_button_search_corner_radius</item>
        <item name="strokeColor">@color/nav_ui_kit_border</item>
        <item name="android:textAppearance">@style/IndoorNavigation.Text.B1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingRight">@dimen/nav_ui_kit_map_button_search_horizontal_padding</item>
        <item name="android:paddingLeft">@dimen/nav_ui_kit_map_button_search_horizontal_padding</item>
    </style>
    <style name="IndoorNavigation.FilledButton" parent="Widget.MaterialComponents.Button">
        <item name="iconTint">@color/nav_ui_kit_white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">16dp</item>
        <item name="cornerRadius">@dimen/nav_ui_kit_button_search_corner_radius</item>
        <item name="android:textAppearance">@style/IndoorNavigation.Text.B1</item>
        <item name="android:textColor">@color/nav_ui_kit_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--EditText-->
    <style
        name="IndoorNavigation.TextInputLayout"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusTopStart">@dimen/nav_ui_kit_edit_text_input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/nav_ui_kit_edit_text_input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/nav_ui_kit_edit_text_input_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/nav_ui_kit_edit_text_input_corner_radius</item>
        <item name="android:paddingBottom">@dimen/nav_ui_kit_custom_edit_text_bottom_padding</item>
    </style>
    <style name="IndoorNavigation.TextInputLayout.EditText">
        <item name="android:gravity">start</item>
        <item name="android:paddingRight">@dimen/nav_ui_kit_custom_edit_text_horizontal_padding</item>
        <item name="android:paddingLeft">@dimen/nav_ui_kit_custom_edit_text_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/nav_ui_kit_custom_edit_text_padding_specific_bottom_padding</item>
        <item name="android:textAppearance">@style/IndoorNavigation.Text.B1</item>
    </style>

    <!--Cards-->
    <style name="IndoorNavigation.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:paddingTop">@dimen/nav_ui_kit_default_large_vertical_padding</item>
        <item name="android:paddingRight">@dimen/nav_ui_kit_default_medium_horizontal_padding</item>
        <item name="android:paddingLeft">@dimen/nav_ui_kit_default_medium_horizontal_padding</item>
        <item name="cornerSizeTopRight">@dimen/nav_ui_kit_card_view_corner_radius</item>
        <item name="cornerSizeTopLeft">@dimen/nav_ui_kit_card_view_corner_radius</item>
    </style>

    <!--TextView-->
    <style name="IndoorNavigation.TextView.Headline" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/IndoorNavigation.Text.H5</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/nav_ui_kit_text_primary</item>
    </style>
    <style name="IndoorNavigation.TextView.Body" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/IndoorNavigation.Text.B1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/nav_ui_kit_text_primary</item>
    </style>

</resources>